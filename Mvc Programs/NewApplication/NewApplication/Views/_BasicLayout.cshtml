
@{
    ViewBag.Title = "_BasicLayout";
}
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <style type="text/css" >
        div.layout{
            background-color:lightgray;
        }
        div.view{
            border: thin solid black;
            margin:10px 0;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    @RenderSection("Header")
    <div class="layout">
        This is part of the layout after header
    </div>
    @RenderSection("BodySection")
    <div class="layout">
        This is part of layout after view body
    </div>
    @if(IsSectionDefined("Footer"))
    {
        @RenderSection("Footer")
    }
    else
    {
        <h4>This is default footer from layout</h4>
    }
   
    <div class="layout">
        This is part of layout after Footer
    </div>
</body>
</html>

