@model RazorDemo.Models.Product[]
@using RazorDemo.Models;
@{
    ViewBag.Title="DemoArray";
    int productLength = Model.Length;
    int iter = 0;
}

@if(Model.Length >0)
{
    <table border="1">
        <thead><tr><th>Product</th><th>Price</th></tr></thead>
        <tbody>
            @foreach(Product p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <table border="1">
        <thead><tr><th>Product</th><th>Price</th></tr></thead>
        <tbody>
            @while (iter < productLength)
            {
                <tr>
                    <td>@Model[iter].Name</td>
                    <td>$@Model[iter].Price</td>
                </tr>
                iter++;
            }
        </tbody>
    </table>
}
else
{
    <h2>No product data</h2>
}
